<div class="row">
  <div class="col-md-12">

    <%= form_for(@project, :html => { class: "form-horizontal", role: "form"}) do  |f|%>

  <div class="form-group">
    <div class="col-sm-offset-1 control-label col-sm-2">
      <%= f.label :title %>
    </div>
    <div class="col-sm-9">
    <%= f.text_field :title, class:"form-control", placeholder: "Enter Project Name", autofocus: true %>
    </div>
  </div>

<div class="form-group">
  <div class="col-sm-offset-1 control-label col-sm-2">
    <%= f.label :organisation %>
  </div>
  <div class="col-sm-9">
  <%= f.text_field :organisation, rows: 10, class: "form-control", placeholder: "Enter Organisation Name" %>
  </div>
</div>


<div class="form-group">
  <div class="col-sm-offset-1 control-label col-sm-2">
    <%= f.label :description %>
  </div>
  <div class="col-sm-9">
  <%= f.text_field :description, rows: 5, class: "form-control", placeholder: "Describe your Project" %>
  </div>
</div>


<div class="form-group">
  <div class="col-sm-offset-5 col-sm-7">
    <%  if @project.new_record? %>
      <%= f.submit "Create", class: "btn btn-primary btn-lg" %>
    <%else%>
      <%= f.submit "Edit", class: "btn btn-primary btn-lg" %>
    <% end  %>
  <%= link_to " Cancel ", root_path , class: "btn btn-primary btn-lg"%>
  </div>
</div>

<% end %>

</div>
</div>
