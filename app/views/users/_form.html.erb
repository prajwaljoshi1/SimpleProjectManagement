<% if @user.errors.any? %>
   <%= render 'shared/errors', obj: @user %>
<% end %>

<div class="row">
  <div class=" col-md-12">

    <%= form_for(@user, :html => { class: "form-horizontal", role: "form"}) do  |f|%>

  <div class="form-group">
    <div class="col-sm-offset-1 control-label col-sm-1">
    </div>
    <div class="col-sm-8">
    <%= f.text_field :name, class:"form-control input-lg", placeholder: "Enter your Name", autofocus: true %>
    </div>
  </div>

<div class="form-group">
  <div class="col-sm-offset-1 control-label col-sm-1">
  </div>
  <div class="col-sm-8">
  <%= f.email_field :email, rows: 10, class: "form-control input-lg", placeholder: "Enter email" %>
  </div>
</div>


<div class="form-group">
  <div class="col-sm-offset-1 control-label col-sm-1">
  </div>
  <div class="col-sm-8">
  <%= f.password_field :password, rows: 10, class: "form-control input-lg", placeholder: "Enter a password" %>
  </div>
</div>

<div class="form-group">
  <div class="col-sm-offset-1 control-label col-sm-1">
  </div>
  <div class="col-sm-8">
  <%= f.password_field :password_confirmation, rows: 10, class: "form-control input-lg", placeholder: "Enter password again" %>
  </div>
</div>

<div class="form-group">
  <div align="center">
    <%  if @user.new_record? %>
      <%= f.submit "Sign up", class: "btn btn-default btn-lg" %>
    <%else%>
      <%= f.submit "Update account", class: "btn btn-default btn-lg" %>
    <% end  %>
  <%= link_to " Cancel ", root_path , class: "btn btn-default btn-lg"%>
  </div>
</div>

<% end %>

</div>
</div>
