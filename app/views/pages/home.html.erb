//scrap

<div class="my-projects" style="overflow: auto">
  <div class="row-fluid">
  {{ tasklists.each(function (list) { }}
    <div class="col-sm-3 well project-display">
        <div class="list-title">{{= list.escape('title') }}</div>
    </div>

  {{ }); }}
</div>
</div>




<div class="cards"
     id="cards_list_{{= cards.list.id }}"
     data-list-id="{{= cards.list.id }}">
  {{ cards.each(function(card) { }}
    <div class="card"
         id="card_{{= card.id }}"
         data-card-id="{{= card.id }}">

      <button class="archive_card entypo-cancel"
              data-card-id="{{= card.id }}"></button>

      <span class="card_title">
        {{= card.escape('title') }}
      </span>

      <footer>
        <p class="comments_count">
        {{ if (card.get('comments_count') > 0) { }}
          <span class="entypo-comment"></span>
          {{= card.escape('comments_count') }}
        {{ } }}
        </p>

        <div class="assignee">
        {{ assignee = card.get('assignee'); }}
        {{ if (assignee) { }}
            <img src="{{= assignee.escape('gravatar_url') }}" />
        {{ } }}
        </div>
      </footer>

    </div>
  {{ }); }}
</div>

</script>
