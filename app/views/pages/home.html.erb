    <div class="add-task well">
      <form class="form-control " id="list{{=taskList.id}}">
        <input type="text"
           class="task-title"
           name="task[title]"
           placeholder="Add a task ..." />
        <button class="add-task-button" class="btn btn-primary btn-xs"> + </button>
    </form>
  </div>
  </div>
</script>



<script id="individual-task" type="text/template">
